@using BusinessLayer.Models
@model NewsLetterSendMailsModel
@{
    ViewData["Title"] = "SendNewsletter";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    <div class="col-lg-10 col-md-12">
        <input type="text" asp-for="Subject" placeholder="Mail Başlığı" class="form-control" required>
    </div>
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Mail İçeriği</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content no-padding">
                <textarea asp-for="Content" required></textarea>
            </div>
        </div>
    </div>
    <div class="form-group row col-md-12 float-right">
        <div class="col-lg-12">
            <button class="btn btn-w-m btn-success" type="submit">Haber Bülteni Gönder</button>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <br /><br />
</form>
@section ScriptSection{
    <script src="~/admin/js/plugins/summernote/summernote-bs4.js"></script>
    <script>
        $(document).ready(function () {
            $('#Content').summernote({
                height: 300
            });
        });
    </script>
}

