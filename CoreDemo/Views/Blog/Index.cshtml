@using EntityLayer.Concrete;
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<section class="main-content-w3layouts-agileits">
    <div class="container">
        @if (ViewBag.id == null)
        {
            <h3 class="tittle">Bloglar</h3>
        }
        else
        {
            <h3 class="tittle">@Model[0].Category.CategoryName Blogları</h3>
        }

        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="/Blog/BlogReadAll/@item.BlogID">
                                <img src="@item.BlogImage" class="card-img-top img-fluid" alt="@item.BlogTitle">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.BlogCreateDate).ToString("dd.MM.yyyy"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 0
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#/@item.BlogID">
                                            <i class="fas fa-eye"></i> @item.Category.CategoryName
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="/Blog/BlogReadAll/@item.BlogID">@item.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3">
                                    @if (item.BlogContent != null && item.BlogContent.Length > 130)
                                    {
                                        @item.BlogContent.Substring(0, item.BlogContent.Substring(0, 130).LastIndexOf(" "))
                                    }
                                    else
                                    {
                                        @item.BlogContent
                                    }
                                    ...
                                </p>
                                <a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-primary read-m">Devamını Oku</a>
                            </div>
                        </div>
                    }
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>

