@model List<Contact>
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    string read = "";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12 animated fadeInRight">
            <div class="mail-box-header">

                <form method="get" action="index.html" class="float-right mail-search">
                    <div class="input-group">
                        <input type="text" class="form-control form-control-sm" name="search" placeholder="Mail ara">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-sm btn-primary">
                                Ara
                            </button>
                        </div>
                    </div>
                </form>
                <h2>
                    İletişim
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">
                    <div class="btn-group float-right">
                        <button class="btn btn-white btn-sm"><i class="fa fa-arrow-left"></i></button>
                        <button class="btn btn-white btn-sm"><i class="fa fa-arrow-right"></i></button>

                    </div>
                    <button type="button" class="btn btn-white btn-sm checkbox-toggle" id="select-all-checkbox" data-toggle="tooltip"
                            data-placement="left" title="Hepsini Seç">
                        <i class="checkbox-toggle fa fa-square-o"></i></>
                    </button>

                    <button class="btn btn-white btn-sm" data-toggle="tooltip" id="btnRefresh" onclick="GetContactList()" data-placement="left" title="Yenile"><i class="fa fa-refresh"></i></button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" id="btnReadContacts" data-placement="top" title="Okundu Olarak İşaretle"><i class="fa fa-eye"></i> </button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" id="btnUnreadContacts" data-placement="top" title="Okunmadı Olarak İşaretle"><i class="fa fa-eye-slash"></i> </button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Önemli Olarak İşaretle"><i class="fa fa-exclamation"></i> </button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" id="btnDeleteContacts" data-placement="top" title="Çöp kutusuna taşı"><i class="fa fa-trash-o"></i> </button>
                </div>
            </div>
            <div class="mail-box">

                @*<table class="table table-hover table-mail">
                    <tbody>
