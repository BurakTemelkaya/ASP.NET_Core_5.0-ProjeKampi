@using EntityLayer.Concrete
@model List<Message>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    @foreach (var item in Model)
    {
        DateTime now = DateTime.Now;
        TimeSpan zaman = now.Subtract(item.MessageDate);
        string sure;
        if (now.Day == item.MessageDate.Day)
        {
            sure = new DateTime(zaman.Ticks).ToString("H 'saat' m 'dakika' ss 'saniye'");

        }
        else
        {
            sure = new DateTime(zaman.Ticks).ToString("dd 'Gün' H 'saat' m 'dakika' ss 'saniye'");
        }
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="/writer/assets/images/faces/face4.jpg" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderMail sana mesaj gönderdi</h6>
                <p class="text-gray mb-0">
                    @*@item.MessageDate.ToString("dd 'gün' H 'saat' m 'dakika' ss 'saniye'")*@
                    @sure &nbsp; önce gönderildi
                </p>
            </div>
        </a>
    }

    <div class="dropdown-divider"></div>
    <a class="dropdown-item preview-item">
        <div class="preview-thumbnail">
            <img src="/writer/assets/images/faces/face2.jpg" alt="image" class="profile-pic">
        </div>
        <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
            <h6 class="preview-subject ellipsis mb-1 font-weight-normal">Cregh send you a message</h6>
            <p class="text-gray mb-0"> 15 Minutes ago </p>
        </div>
    </a>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item preview-item">
        <div class="preview-thumbnail">
            <img src="/writer/assets/images/faces/face3.jpg" alt="image" class="profile-pic">
        </div>
        <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
            <h6 class="preview-subject ellipsis mb-1 font-weight-normal">Profile picture updated</h6>
            <p class="text-gray mb-0"> 18 Minutes ago </p>
        </div>
    </a>
    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center">4 new messages</h6>
</div>