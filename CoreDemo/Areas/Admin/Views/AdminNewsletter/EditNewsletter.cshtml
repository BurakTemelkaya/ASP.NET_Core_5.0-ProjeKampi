@model NewsLetter
@{
    ViewData["Title"] = "EditNewsletter";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="MailID">
    <div class="form-group row col-md-12">
        <label class="col-lg-2 col-form-label">Mail</label>
        <div class="col-lg-10"><input type="text" asp-for="Mail" placeholder="Mail" class="form-control"></div>
    </div>
    <div class="form-group row col-md-12">
        <div class="col-lg-offset-2 col-lg-10">
            <div class="i-checks"><label> <input asp-for="MailStatus" type="checkbox"><i></i> Mail Almaya Devam Edicek Mi ? </label></div>
        </div>
    </div>
    <div class="form-group row col-md-12 float-right">
        <div class="col-lg-12">
            <button class="btn btn-w-m btn-success" type="submit">Düzenle</button>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <br /><br />
</form>

