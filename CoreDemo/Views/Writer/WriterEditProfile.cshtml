@model EntityLayer.Concrete.AppUser
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
            <br />
            <form class="form-group" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    @Html.HiddenFor(x => x.Id)
                    <label for="exampleInputName1">Adınız</label>
                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", @placeholder = "Adınız" })
                    @Html.ValidationMessageFor(x => x.NameSurname, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.HiddenFor(x => x.Id)
                    <label for="exampleInputName1">Kullanıcı Adınız</label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adınız" })
                    @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail adresi</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Mail" })
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>
                @*<div class="form-group">
                    <label for="exampleInputPassword4">Yeni Şifre</label>
                    @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control", @placeholder = "Yeni Şifreniz" })
                    @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword5">Şifrenizi Tekrar Giriniz</label>
                    @Html.Password("passwordAgain", "", new { @class = "form-control", @placeholder = "Yeni Şifrenizi Tekrar Giriniz" })
                    @Html.ValidationMessage("PasswordAgainMessage", "", new { @class = "text-danger" })
                </div>*@
                <div class="form-group">
                    <label for="exampleSelectGender">Gender</label>
                    <select class="form-control" id="exampleSelectGender">
                        <option>Erkek</option>
                        <option>Kadın</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Yazar Görsel</label>
                    <input type="file" name="imageFile" class="form-control-file">
                </div>
                @*<div class="form-group">
                    <label for="exampleInputCity1">Şehir</label>
                    @Html.DropDownListFor(x => x.WriterCity, (List<SelectListItem>)ViewBag.Cities, new { @class = "form-control dropdown" })
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Textarea</label>
                    @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control", @placeholder = "Hakkınızda" })
                    @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger" })
                </div>*@
                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>

