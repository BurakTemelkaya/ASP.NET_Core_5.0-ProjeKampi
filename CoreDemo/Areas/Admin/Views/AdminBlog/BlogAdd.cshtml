@model Blog
@{
    ViewData["Title"] = "Blog Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section HeaderSection {
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group row col-md-12">
        <label class="col-lg-2 col-form-label">Blog Adı</label>
        <div class="col-lg-10 col-md-12">
            <input type="text" asp-for="BlogTitle" placeholder="Blog Adı" class="form-control" required>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Blog İçeriği</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <textarea asp-for="BlogContent" id="BlogContent" required></textarea>
        </div>
    </div>
    <div class="form-group row col-md-12">
        <label class="col-lg-2 col-form-label">Blog Görseli Linki</label>
        <div class="col-lg-10"><input type="text" asp-for="BlogImage" placeholder="Blog Görseli Linki" class="form-control"></div>
    </div>
    <div class="btn-group col-sm-12">
        <label title="1.Resim Dosyasını Yükle" for="blogImage" class="btn btn-primary">
            <input type="file" accept="image/*" name="blogImage" id="blogImage" class="hide">
            Blog Görsel Yükle
        </label>
    </div>
    <div class="form-group row col-md-12">
        <label class="col-lg-2 col-form-label">Blog Küçük Görseli Linki</label>
        <div class="col-lg-10"><input type="text" asp-for="BlogThumbnailImage" placeholder="Blog Küçük Görseli" class="form-control"></div>
    </div>
    <div class="btn-group col-sm-12">
        <label title="Blog Küçük Resmini Yükle" for="blogThumbnailImage" class="btn btn-primary">
            <input type="file" accept="image/*" name="blogThumbnailImage" id="blogThumbnailImage" class="hide">
            Blog Küçük Görseli Yükle
        </label>
    </div>
    <div class="form-group row col-md-12">
        <label class="col-lg-2 col-form-label">Blog Kategorisi</label>
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.CategoryList, new { @class = "form-control" })
    </div>
    <div class="form-group row col-md-12">
        <div class="col-lg-offset-2 col-lg-10">
            <div class="i-checks"><label> <input asp-for="BlogStatus" type="checkbox"><i></i> Hemen Yayınla </label></div>
        </div>
    </div>
    <div class="form-group row col-md-12 float-right">
        <div class="col-lg-12">
            <button class="btn btn-w-m btn-success" type="submit">Blog Ekle</button>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <br /><br />
</form>
@section ScriptSection {
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/js/summernotesetup.js"></script>
}

