@model IPagedList<Notification>
@{
    int count = @ViewBag.NotificationCount;
}
<li class="dropdown">
    <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
        <i class="fa fa-bell"></i>
        @if (count > 0)
        {
            <span class="label label-primary">
                @count
            </span>
        }

    </a>
    <ul class="dropdown-menu dropdown-alerts">
        @foreach (var item in Model)
        {
            <li>
                <a href="mailbox.html" class="dropdown-item">
                    <div>
                        <i class="fa fa-envelope fa-fw"></i> @item.NotificationDetails
                        <span class="float-right text-muted small">@item.NotificationDate.ToString("dd.MM.yyyy")</span>
                    </div>
                </a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li class="dropdown-divider"></li>
        <li>
            <div class="text-center link-block">
                <a href="#" class="dropdown-item">
                    <strong>Bütün bildirimleri gör</strong>
                    <i class="fa fa-angle-right"></i>
                </a>
            </div>
        </li>
    </ul>
</li>