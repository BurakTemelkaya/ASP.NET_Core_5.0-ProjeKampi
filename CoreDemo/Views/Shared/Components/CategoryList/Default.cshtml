@model List<CategoryBlogandBlogCount>;
<div class="tech-btm">
    <h4>Kategoriler</h4>
    <ul class="list-group single">
        @foreach (var item in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="/Blog/Index/@item.Categorys.CategoryID">
                    @item.Categorys.CategoryName
                    <span class="badge badge-primary badge-pill">@item.CategoryCount</span>
                </a>
            </li>
        }
    </ul>
</div>