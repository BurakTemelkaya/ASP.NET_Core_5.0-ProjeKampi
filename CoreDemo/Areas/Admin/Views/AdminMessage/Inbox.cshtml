@model List<Message>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    string read = "";
}
<div class="wrapper wrapper-content">
    <div class="row">
        @await Component.InvokeAsync("MessageFolders")
        <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <form method="get" class="float-right mail-search">
                    <div class="input-group">
                        <input type="text" class="form-control form-control-sm" name="search" placeholder="Mail ara">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-sm btn-primary">
                                Ara
                            </button>
                        </div>
                    </div>
                </form>
                <h2>
                    Gelen Kutusu
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">
                    <div class="btn-group float-right">
                        <button class="btn btn-white btn-sm"><i class="fa fa-arrow-left"></i></button>
                        <button class="btn btn-white btn-sm"><i class="fa fa-arrow-right"></i></button>

                    </div>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="left" title="Yenile"><i class="fa fa-refresh"></i> Yenile</button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" id="btnReadMessages" data-placement="top" title="Okundu Olarak İşaretle"><i class="fa fa-eye"></i> </button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Önemli Olarak İşaretle"><i class="fa fa-exclamation"></i> </button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Çöp kutusuna taşı"><i class="fa fa-trash-o"></i> </button>

                </div>
            </div>
            <div class="mail-box" id="mailList">

                <table class="table table-hover table-mail">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @if (!item.MessageStatus)
                                read = "read";
                            else
                                read = "unread";
                            <tr class="@read">
                                <td class="check-mail">
                                    <input type="checkbox" class="i-checks" id="@item.MessageID">
                                </td>
                                <td class="mail-ontact"><a href="/Admin/AdminMessage/Read/@item.MessageID">@item.SenderUser.NameSurname</a></td>
                                <td class="mail-subject"><a href="/Admin/AdminMessage/Read/@item.MessageID">@item.Details</a></td>
                                <td class=""><i class="fa fa-paperclip"></i></td>
                                <td class="text-right mail-date">@item.MessageDate.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#btnReadMessages").click(function () {
        var idSelector = function () { return this.id; };
        var selectedCheckbox = $(":checkbox:checked").map(idSelector).get();
        var newselectedCheckbox = JSON.stringify(selectedCheckbox);

        console.log(newselectedCheckbox);

        $.ajax({
            type: 'post',
            url: '/Admin/AdminMessage/MarkReadMessages',
            dateType: 'json',
            data: newselectedCheckbox,
            success: function (data) {
                alert("Başarılı");
            }
        });
    });

</script>

