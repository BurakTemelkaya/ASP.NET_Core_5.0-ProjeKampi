@using EntityLayer.Concrete
@model List<Notification>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
    string sure = "";
    DateTime now = DateTime.Now;
}

<h1>Bildirimler</h1>

<table class="table table-responsive col-12">
    <thead>
        <tr>
            <th>#</th>
            <th>Bildirim</th>
            <td>Süre</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            TimeSpan zaman = now.Subtract(item.NotificationDate);
            if (zaman.Days == 0)
            {
                sure = "Bugün";
            }
            else if (zaman.Days <= 10)
            {
                sure = new DateTime(zaman.Ticks).ToString("d 'Gün önce' ");
            }
            else
            {
                sure = item.NotificationDate.ToString();
            }
            <tr>
                <td>@item.NotificationID</td>
                <td>@item.NotificationDetails</td>
                <td>@sure</td>
            </tr>
        }
    </tbody>
</table>