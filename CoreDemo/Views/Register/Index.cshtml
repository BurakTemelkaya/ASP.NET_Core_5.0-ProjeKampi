@model UserDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="~/CoreBlogTema/js/jquery-2.2.3.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form class="form-group" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız Soyadınız</label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @id = "validationDefault01", @placeholder = "Adınızı ve Soyadınızı Giriniz", @required = "" })
                            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail Adresisiniz</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @id = "validationDefault02", @placeholder = "E-Postanızı Giriniz", @required = "" })
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Parola</label>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @id = "password1", @placeholder = "Şifre Giriniz", @required = "" })
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Parolanızı Tekrar Giriniz</label>
                            @Html.PasswordFor(x=> x.PasswordAgain, new { @class = "form-control", @id = "password2", @placeholder = "Şifrenizi Tekrar Giriniz", @required = "" })
                            @Html.ValidationMessageFor(x => x.PasswordAgain, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="validationCustom01 mb-2">Görsel</label>
                            <input type="file" class="form-control-file" name="imageFile" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="validationCustom01 mb-2">Şehir</label>
                            @Html.DropDownListFor(x => x.City, (List<SelectListItem>)ViewBag.Cities, new { @class = "form-control dropdown" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="validationCustom01 mb-2">Hakkınızda Yazmak İstedikleriniz</label>
                            @Html.TextAreaFor(x => x.About, new { @class = "form-control" })
                        </div>
                    </div>
                    @Html.ValidationMessage("ErrorMessage", "", new { @class = "text-danger" })

                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#" id="btn1">Tüm şartları okudum ve kabul ediyorum.</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
    <br />
    <script>
        $('#btn1').click(function () {
            Swal.fire(
                'Sözleşme Koşulları',
                'Sitemize verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları ' +
                'spam ölçüsüne varnadab gönderilmeye devam edicektir!.' +
                'Eğer e - posta bülteninden çıkmak isterseniz mail ileti dizisinden durdurabilirsiniz ' +
                'şifre ve mail adresleriniz şifrelenmiş formatte herhangi bir kullanıcının ' +
                'göremeyeceği şekilde veritabanında depolanmaktadır',
                'Bilgilendirme Mesajı'
            )
        })
    </script>
</section>

