@model NewsLetterDraft
@{
    ViewData["Title"] = "Haber Bülteni Taslağı Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section HeaderSection {
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
}

<form method="post">
    <div class="col-lg-12 col-md-12">
        <h3 class="mx-1">Haber Başlığı</h3>
        <input type="text" asp-for="Subject" placeholder="Mail Başlığı" class="form-control" required>
    </div>
    <div class="col-lg-12 my-1">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Haber İçeriği</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content no-padding">
                <textarea asp-for="Content" required></textarea>
            </div>
        </div>
    </div>
    <div class="form-group row col-md-12 float-right">
        <div class="col-lg-12">
            <button class="btn btn-w-m btn-success" type="submit">Ekle</button>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <br /><br />
</form>
@section ScriptSection{
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Content').summernote({
                height: 300
            });
        });
    </script>
}

