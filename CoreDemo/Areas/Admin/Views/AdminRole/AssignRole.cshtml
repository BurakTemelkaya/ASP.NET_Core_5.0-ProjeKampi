@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="ibox-content">
    <form method="post">
        @for (int i = 0; i < Model.Count; i++)
        {

            <input type="hidden" asp-for="@Model[i].RoleId">
            <input type="hidden" asp-for="@Model[i].Name">
            <div class="form-group row">
                <div class="col-lg-offset-2 col-lg-5">
                    <div class="i-checks"><label> <input type="checkbox" asp-for="@Model[i].Exists"><i></i> @Model[i].Name </label></div>
                </div>
            </div>
        }
        <button class="btn btn-info">Değişiklikleri Kaydet</button>
    </form>
</div>
<br>
<a href="/Admin/AdminRole/UserRoleList" class="btn btn-primary">Rol Listesine Dön</a>
